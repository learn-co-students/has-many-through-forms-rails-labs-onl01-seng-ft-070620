<h1>Create a New Post</h1>
<%= form_for @post do |f| %>
    <%= f.label 'Title: ' %>
    <%= f.text_field :title %><br>

    <%= f.label 'Content: '%>
    <%= f.text_area :content %><br>

    <%= f.label 'Categories: ' %>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %><br>

    <%= f.fields_for :categories, @post.categories.build do |f| %>
        <%= f.text_field :name %>
    <% end %><br>

    <%= f.submit %>
<% end %>