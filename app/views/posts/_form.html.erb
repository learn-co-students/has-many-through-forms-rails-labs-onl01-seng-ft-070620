<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    <%= f.label :content %>
    <%= f.text_field :content %> <br>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %> <br>
    <%= f.fields_for :categories do |c| %>
        <%= c.text_field :name %> <br>
    <% end %>
    <%= f.submit %>
<% end %>